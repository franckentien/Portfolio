{# app/Ressources/views/default/contact.html.twig #}
{% extends '::menu.html.twig' %}
{% block metaKeyword %}{% trans %}contact.keyword{% endtrans %}{% endblock %}
{% block metaDescription %}{% trans %}contact.description{% endtrans %}{% endblock %}
{% block metaTitle %}{% trans %}contact.title{% endtrans %}{% endblock %}

{% block menuTitre %}{% trans %}contact.titre{% endtrans %}{% endblock %}
{% block pageContent %}

    <p>{% trans %}contact.main{% endtrans %}</p>

    <div class="my-card-wide mdl-card mdl-shadow--6dp">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <fieldset>
            <div class="mdl-card__supporting-text">

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    {{ form_widget(form.name, {'attr': {'class': 'mdl-textfield__input'}}) }}
                    <div class="form_errors">
                        {{ form_errors(form.name, {'attr': {'class': 'menu-dark'}}) }}
                    </div>
                    {{ form_label(form.name, "contact.form.name", {'label_attr': {'class': 'mdl-textfield__label'}}) }}

                </div>
                <br>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <div class="form_errors">
                        {{ form_errors(form.email, {'attr': {'class': 'menu-dark'}}) }}
                    </div>
                    {{ form_widget(form.email, {'attr': {'class': 'mdl-textfield__input',}}) }}
                    {{ form_label(form.email, "contact.form.mail", {'label_attr': {'class': 'mdl-textfield__label'}}) }}

                </div>
                <br>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    {{ form_widget(form.message, {'attr': {'class': 'mdl-textfield__input'}}) }}
                    <div class="form_errors">
                    {{ form_errors(form.message, {'attr': {'class': 'menu-dark'}}) }}
                    </div>
                    {{ form_label(form.message, "contact.form.message", {'label_attr': {'class': 'mdl-textfield__label'}}) }}

                </div>

            </div>

                <div class="mdl-card__actions mdl-card--border">
                    {{ form_widget(form.FormSubmit, {'attr': {'class': 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect'}}) }}
                </div>

            {{ form_rest(form) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}

        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(form) }}



        </fieldset>
    </div>

    {% if toast is defined %}
        {% if toast == true %}

            <div id="demo-toast-example" class="mdl-js-snackbar mdl-snackbar">
                <div class="mdl-snackbar__text"></div>
                <button class="mdl-snackbar__action" type="button" ></button>
            </div>

            <script>
                r(function(){
                    var notification = document.querySelector('.mdl-js-snackbar');
                    notification.MaterialSnackbar.showSnackbar(
                        {
                            message: '{% trans %}contact.submit{% endtrans %}'
                        }
                    );
                });

                function r(f){/in/.test(document.readyState)?setTimeout('r('+f+')',9):f()}
            </script>

        {% endif %}
    {% endif %}




{% endblock %}
